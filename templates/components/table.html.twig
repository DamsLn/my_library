<div class="flex flex-col">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden border-none rounded-lg">
                <table class="min-w-full">
                    <thead class="bg-white border-b">
                        <tr>
                            {% for key, headerCell in headerCells %}
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    {{ headerCell }}
                                </th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in rows %}                          
                            <tr class="even:bg-gray-100 odd:bg-white border-b">
                                {% for key, headerCell in headerCells %}
                                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                        {% if key in ['createdAt', 'updatedAt', 'deletedAt'] %}
                                            {{ attribute(row, key) != null ? attribute(row, key)|date('d/m/Y') : 'N/A' }}
                                        {% else %}
                                            {{ attribute(row, key)|length > 100 ? attribute(row, key)|slice(0, 100) ~ '...' : attribute(row, key) }}
                                        {% endif %}
                                    </td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>