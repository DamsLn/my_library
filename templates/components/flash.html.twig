<div class="absolute flex flex-col justify-center items-end gap-4 top-10 right-8">
    {% for type, messages in app.flashes %}
        {% set flash_id = 0 %}
        {% for message in messages %}
            {% set flash_id = flash_id + 1 %}
            <div id="flash{{ flash_id }}" class="flash flash--{{ type }}">
                <div class="flash__message">
                    {{ message }}
                </div>
                <div class="flash__close-icon">
                    <svg class="hover:cursor-pointer" onclick="hiddeMessageFlash('flash{{ flash_id }}')" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" width="20px" height="auto">
                        <!--!Font Awesome Free 6.7.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                        <path fill="#F8FAFC" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/>
                    </svg>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>